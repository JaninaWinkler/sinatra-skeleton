<% if @user && @user.errors.any? %>
  <div>
    <strong>Oops! We can't process your sign up request because:</strong>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <strong>Please fix the issues to proceed.</strong>
    <p> </p>
  </div>
<% end %>
